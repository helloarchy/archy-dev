<!-- BLINDS FORM -->
<form id="formBlinds">
<!-- WORKINGS Header (Not really part of the form, just at top of it) -->
<div id="header">
    <div id="headerDroppedCap">W</div>
    <div id="headerText">orkings</div>
    <div id="headerPitifulSelf">
        <a class="nav-link text-dark" asp-area=""
           asp-controller="Home" asp-action="Index">
            <i>by </i>RARH.io
            <i> on behalf of </i>HARDY'S
        </a>
    </div>
</div>


<!-- DETAILS -->
<fieldset>
    <legend>
        Details<span class="arrowDown">&#9663;</span>
        <span class="arrowUp">&#9653;</span>
    </legend>
    <div class="fieldContent">
        <!-- CLIENT -->
        <label>Client:</label>
        <input id="clientTextBox" type="text" list="clientDataList"
               placeholder="Rob Interiors" onfocus="this.select()">
        <!-- Updated 2017-07-04 to reflect new clients. -->
        <datalist id="clientDataList">
            <option value="Blinds n' Blessings">
            <option value="Chelsea Fabrics">
            <option value="Curtain Factory Outlet">
            <option value="Fabric House">
            <option value="Judy Fletcher">
            <option value="Posner Interiors">
        </datalist>
        <!-- CUSTOMER -->
        <br><label>Customer:</label>
        <input id="customerTextBox" type="text" name="jobCustomerText"
               placeholder="Joe Bloggs" onfocus="this.select()">
        <!-- REFERENCE -->
        <br><label>Reference:</label>
        <input id="referenceTextBox" type="text" name="jobReferenceText"
               placeholder="Kids room" onfocus="this.select()">
        <!-- NUMBER OF BLINDS -->
        <br><label>No. Blinds:</label>
        <input id="numOfBlinds" type="number" name="jobNumOfBlinds" placeholder="1"
               min="1" step="1" onfocus="this.select()">
        <input id="numBlindsPlus" class="buttonIncrement" type="button"
               name="jobNumBlindsPlus" value="+" style="margin-left: 2px">
        <input id="numBlindsMinus" class="buttonIncrement" type="button"
               name="jobNumBlindsMinus" value="&minus;">
    </div>
</fieldset>

<!-- DIMENSIONS -->
<fieldset>
    <legend>
        Dimensions<span class="arrowDown">&#9663;</span>
        <span class="arrowUp">&#9653;</span>
    </legend>

    <div class="fieldContent">
        <!-- WIDTH -->
        <label>Width:</label>
        <input id="width" type="number" name="sizeWidth" placeholder="123.45"
               step="0.01" min="26" max="269.99" onfocus="this.select()" required>
        <select class="unitsSelect" id="widthUnit">
            <option value="in">in</option>
            <option value="mm">mm</option>
            <option value="cm" selected disabled>cm</option>
        </select>
        <!-- HEIGHT -->
        <br><label>Height:</label>
        <input id="height" type="number" name="sizeHeight" placeholder="123.45"
               step="0.01" min="40" max="279.99" onfocus="this.select()" required>
        <select class="unitsSelect" id="heightUnit">
            <option value="in">in</option>
            <option value="mm">mm</option>
            <option value="cm" selected disabled>cm</option>
        </select>
        <!-- NUMBER OF WIDTHS -->
        <br><label>No. Widths:</label>
        <input id="numOfWidths" type="number" name="jobNumOfWidths" placeholder="1"
               min="1" step="1" onfocus="this.select()">
        <input id="numWidthsPlus" class="buttonIncrement" type="button"
               name="jobNumWidthsPlus" value="+" style="margin-left: 2px">
        <input id="numWidthsMinus" class="buttonIncrement" type="button"
               name="jobNumWidthsMinus" value="&minus;">
    </div>
</fieldset>

